<%= turbo_frame_tag quote do %>
  <%= simple_form_for quote, html: { class: "border p-2 flex justify-between gap-x-2 rounded items-center" } do |f| %>
    <% if quote.errors.any? %>
      <div class="error-message">
        <%= quote.errors.full_messages.to_sentence.capitalize %>
      </div>
    <% end %>

    <div class="flex-1">
      <%= f.input :name, label: false, input_html: { autofocus: true, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline w-full" } %>
    </div>
    <%= f.submit class: "bg-indigo-500 text-white p-2 rounded-sm hover:bg-indigo-600 hover:shadow-sm" %>
    <%= link_to "Cancel", quotes_path, class: "p-2 border rounded-sm hover:shadow-sm" %>
  <% end %>
<% end %>
