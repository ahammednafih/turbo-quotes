<%= turbo_frame_tag quote do %>
  <div class="border-solid border p-2 flex items-center gap-x-2">
    <%= link_to quote.name, quote_path(quote), class: "flex-1 underline", data: { turbo_frame: "_top" }  %>
    <%= button_to "Delete",
                  quote_path(quote),
                  method: :delete,
                  class: "bg-red-500 border text-white p-2 rounded-sm hover:bg-red-600 hover:shadow-sm" %>
    <%= link_to "Edit",
                edit_quote_path(quote),
                class: "bg-white border p-2 rounded-sm hover:shadow-sm" %>
  </div>
<% end %>
